<!DOCTYPE html>
<html>
<head>
    <title>Instagram Clone - Home</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="main-container">
        <!-- Â∑¶‰æßÂØºËà™Ê†è -->
        <%- include('partials/navbar') %>
        
        <!-- ‰∏≠ÂøÉÂÜÖÂÆπ -->
        <div class="content">
            <h1>üì∏ Feed</h1>
            
            <% if (message) { %>
                <div class="alert"><%= message %></div>
            <% } %>
            
            <div class="posts-container">
                <% if (posts && posts.length > 0) { %>
                    <% posts.forEach((post) => { %>
                        <%- include('partials/post-card', { post: post }) %>
                    <% }); %>
                <% } else { %>
                    <p class="no-posts">No posts yet. Start following users!</p>
                <% } %>
            </div>
            
            <!-- ÂàÜÈ°µ -->
            <% if (totalPages > 1) { %>
                <div class="pagination">
                    <% if (currentPage > 1) { %>
                        <a href="/home?page=<%= parseInt(currentPage) - 1 %>">‚Üê Previous</a>
                    <% } %>
                    
                    <span>Page <%= currentPage %> / <%= totalPages %></span>
                    
                    <% if (parseInt(currentPage) < totalPages) { %>
                        <a href="/home?page=<%= parseInt(currentPage) + 1 %>">Next ‚Üí</a>
                    <% } %>
                </div>
            <% } %>
        </div>
    </div>
</body>
</html>

<%- layout('layouts/main') %>

<div class="container mt-5">
  <div class="row">
    <!-- 左侧个人信息（自己的） -->
    <div class="col-md-4">
      <div class="card shadow-sm">
        <div class="card-body text-center">
          <img src="<%= user.avatar || '/images/default-avatar.png' %>"
               alt="<%= user.username %>"
               class="rounded-circle mb-3"
               width="140" height="140">

          <h3><%= user.username %></h3>
          <p class="text-muted">@<%= user.username %></p>

          <% if (user.bio) { %>
            <p class="mt-3"><%= user.bio %></p>
          <% } %>

          <div class="d-flex justify-content-center gap-5 my-4">
            <!-- 粉丝：不可点击 -->
            <span class="btn btn-outline-secondary disabled text-muted"
                  style="pointer-events: none;">
              <strong><%= user.followers ? user.followers.length : 0 %></strong><br>粉丝
            </span>

            <!-- 关注中：不可点击 -->
            <span class="btn btn-outline-secondary disabled text-muted"
                  style="pointer-events: none;">
              <strong><%= user.following ? user.following.length : 0 %></strong><br>关注中
            </span>
          </div>

          <!-- 自己的页面只保留编辑资料按钮 -->
          <a href="/profile/edit" class="btn btn-outline-primary w-100">编辑资料</a>
        </div>
      </div>
    </div>

    <!-- 右侧自己的动态 -->
    <div class="col-md-8">
      <h4 class="mb-4">我的动态</h4>

      <!-- 发帖框（可选保留） -->
      <div class="card mb-4">
        <form action="/posts" method="POST" enctype="multipart/form-data">
          <div class="card-body">
            <textarea name="content" class="form-control" rows="3" placeholder="有什么想分享的？" required></textarea>
            <div class="mt-3 d-flex justify-content-between">
              <input type="file" name="image" accept="image/*" class="form-control form-control-sm" style="width: auto;">
              <button type="submit" class="btn btn-primary">发布</button>
            </div>
          </div>
        </form>
      </div>

      <% if (posts && posts.length > 0) { %>
        <% posts.forEach(post => { %>
          <div class="card mb-3 shadow-sm">
            <div class="card-body">
              <div class="d-flex justify-content-between">
                <strong><%= user.username %></strong>
                <small class="text-muted">
                  <%= new Date(post.createdAt).toLocaleString('zh-CN') %>
                </small>
              </div>

              <p class="mt-3"><%= post.content %></p>

              <% if (post.image) { %>
                <img src="<%= post.image %>" class="img-fluid rounded mb-3" alt="post">
              <% } %>

              <div class="d-flex gap-4 text-muted small mt-3">
                <span>点赞 <%= post.likes ? post.likes.length : 0 %></span>
                <span>评论 <%= post.comments ? post.comments.length : 0 %></span>
              </div>

              <!-- 删除按钮（自己帖子才显示） -->
              <form action="/posts/<%= post._id %>?_method=DELETE" method="POST" class="d-inline">
                <button type="submit" class="btn btn-sm btn-danger mt-2">删除</button>
              </form>
            </div>
          </div>
        <% }) %>
      <% } else { %>
        <div class="text-center text-muted mt-5">
          <p>你还没有发过动态，快去发布第一条吧！</p>
        </div>
      <% } %>
    </div>
  </div>
</div>

<style>
  .btn.disabled, [disabled] {
    opacity: 0.65;
    pointer-events: none !important;
    cursor: not-allowed !important;
  }
</style>

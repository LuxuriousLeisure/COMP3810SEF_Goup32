<%- layout('layouts/main') %>

<div class="container mt-5">
  <div class="row">
    <!-- 左侧个人信息 -->
    <div class="col-md-4">
      <div class="card shadow-sm">
        <div class="card-body text-center">
          <img src="<%= user.avatar || '/images/default-avatar.png' %>"
               alt="<%= user.username %>"
               class="rounded-circle mb-3"
               width="140" height="140">

          <h3><%= user.username %></h3>
          <p class="text-muted">@<%= user.username %></p>

          <% if (user.bio) { %>
            <p class="mt-3"><%= user.bio %></p>
          <% } %>

          <div class="d-flex justify-content-center gap-5 my-4">
            <!-- 粉丝：不可点击 -->
            <span class="btn btn-outline-secondary disabled text-muted"
                  style="pointer-events: none;">
              <strong><%= user.followers ? user.followers.length : 0 %></strong><br>粉丝
            </span>

            <!-- 关注中：不可点击 -->
            <span class="btn btn-outline-secondary disabled text-muted"
                  style="pointer-events: none;">
              <strong><%= user.following ? user.following.length : 0 %></strong><br>关注中
            </span>
          </div>

          <!-- 关注按钮：完全禁用 -->
          <% if (currentUser && currentUser._id.toString() !== user._id.toString()) { %>
            <% const isFollowing = currentUser.following && 
                                  currentUser.following.some(id => id.toString() === user._id.toString()); %>
            <% if (isFollowing) { %>
              <span class="btn btn-secondary w-100" disabled>已关注</span>
            <% } else { %>
              <span class="btn btn-outline-primary w-100" disabled>关注</span>
            <% } %>
          <% } else { %>
            <a href="/profile/edit" class="btn btn-outline-primary w-100">编辑资料</a>
          <% } %>
        </div>
      </div>
    </div>

    <!-- 右侧动态 -->
    <div class="col-md-8">
      <h4 class="mb-4"><%= user.username %> 的动态</h4>

      <% if (posts && posts.length > 0) { %>
        <% posts.forEach(post => { %>
          <div class="card mb-3 shadow-sm">
            <div class="card-body">
              <div class="d-flex justify-content-between align-items-start">
                <div>
                  <strong><%= user.username %></strong>
                  <small class="text-muted ms-2">
                    <%= new Date(post.createdAt).toLocaleString('zh-CN') %>
                  </small>
                </div>
              </div>

              <p class="mt-3"><%= post.content %></p>

              <% if (post.image) { %>
                <img src="<%= post.image %>" class="img-fluid rounded mb-3" alt="post image">
              <% } %>

              <div class="d-flex gap-4 text-muted small mt-3">
                <span>点赞 <%= post.likes ? post.likes.length : 0 %></span>
                <span>评论 <%= post.comments ? post.comments.length : 0 %></span>
              </div>
            </div>
          </div>
        <% }) %>
      <% } else { %>
        <div class="text-center text-muted mt-5">
          <p>这个人还没有发过动态～</p>
        </div>
      <% } %>
    </div>
  </div>
</div>

<!-- 强制禁用样式 -->
<style>
  .btn.disabled, .btn:disabled, [disabled] {
    opacity: 0.65;
    pointer-events: none !important;
    cursor: not-allowed !important;
  }
</style>
